<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFBF7">

    <!-- Top Navigation Bar -->
    <ImageButton
        android:id="@+id/backButtonInFoodListPage"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/shape_for_circle_button"
        android:contentDescription="@string/back_button"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_back_arrow"
        android:elevation="8dp"/>

    <!-- 헤더바 -->
    <View
        android:id="@+id/headerBarInFoodListPage"
        android:layout_width="380dp"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:layout_centerHorizontal="true"
        android:background="#FF5414" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerBarInFoodListPage"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/product_detail_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Product Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Name Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="우유" />

                <EditText
                    android:id="@+id/productNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Expiration Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/expiration_date"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expirationDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024.11.07" />

                <EditText
                    android:id="@+id/expirationDateEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />

            <!-- Memo Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/memo"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/memoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/memo_content" />

                <EditText
                    android:id="@+id/memoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Edit and Save Buttons -->
    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productDetailsCard"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#8F8F8F"
        android:text="@string/edit" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productDetailsCard"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#8F8F8F"
        android:text="@string/save"
        android:visibility="gone" />

    <!-- Location Setting Section -->
    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/location_setting"
        android:textSize="18sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/locationGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/locationCard4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp" />

    </GridLayout>

</RelativeLayout>