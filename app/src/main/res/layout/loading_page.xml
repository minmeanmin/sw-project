<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F9"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButtonInLoadingPage"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/shape_for_circle_button"
        android:contentDescription="@string/back_button"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/ic_back_arrow"
        android:elevation="8dp"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/backButtonInLoadingPage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/backButtonInLoadingPage"
        android:text="등록중"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="382dp"
        android:layout_height="280dp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="38dp"
        android:background="@drawable/input_container_background"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- 제목 텍스트 추가 -->

        <TextView
            android:id="@+id/inputTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="40dp"
            android:text="등록중입니다..."
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="107dp"
            android:layout_height="84dp"
            />

    </LinearLayout>

</RelativeLayout>
